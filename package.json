{
  "name": "core-ts-root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^24.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "pretest": "pnpm -r run build",
