{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "core-ts-root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^24.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "tsdown": "^0.15.12",
    "typedoc": "^0.28.14",
    "typedoc-plugin-dt-links": "^2.0.27",
    "typedoc-plugin-mdn-links": "^5.0.10",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "pretest": "pnpm -r run build",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "test": "vitest run --typecheck --coverage",
    "coverage": "vitest run --reporter=dot --coverage --coverage.reporter=json && node -e \"console.log(JSON.stringify(require('./coverage/coverage-final.json'), null, 2))\"",
    "validate": "pnpm -r run validate",
    "docs": "typedoc --options typedoc.json --tsconfig tsconfig.workspace.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luolapeikko/core-ts.git"
  },
  "keywords": [
    "typescript",
    "common",
    "interface",
    "type"
  ],
  "author": "mharj",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luolapeikko/core-ts/issues"
  },
  "homepage": "https://github.com/luolapeikko/core-ts#readme",
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
